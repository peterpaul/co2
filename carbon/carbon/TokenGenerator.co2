include co2/BaseObject
include Token

class TokenGenerator : Singleton {
	int value;

	TokenGenerator () {
		super ();
		value = 0;
	}

	Token create (Token token) {
		String name = new String ("_%s_%d", token.name.data, value);
		Token retval = new Token.fromToken (token, name.data, _IDENTIFIER);
		value += 1;
		delete name;
		return retval;
	}
}
